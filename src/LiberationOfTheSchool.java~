//////////////////////////////////////////////////ALGORITHME PRINCIPALE//////////////////////////////////////////////////////////////////////////
    void jouer(){
	affichageChargement();
	Sound theme=newSound("theme.mp3");play(theme,true);
	Joueur eleve = new Joueur();eleve.vie=3;
	do{
	    cursor(20,60);print("Es-tu un gar√ßon ou une fille ? (G ou F) :");
	    cursor(21,80);clearLine();eleve.sexe=readChar(); 
	}while (eleve.sexe!='G' && eleve.sexe != 'g' && eleve.sexe!='F' && eleve.sexe!='f');
	
	clearScreen();
	cursor(20,65);println("Quel est le nom de ton √©cole ?");
	cursor(21,80);eleve.ecole = readString();
	clearScreen();
	String sexe;
	dialogue1(eleve);
	affichageChargement();
	stop(theme);
	//d√©but de combat avec le loustique de Math//
	Sound themeC=newSound("themeCombat.mp3");play(themeC,true);
	int[]questionFaites=new int[10];
	int i=0;
	CSVFile fichiercsv = loadCSV("questions_reponses_stock.csv");
	afficherCombat(creerLoustique("Pythongore","math"),eleve,fichiercsv,questionFaites,i);
        stop(themeC);
	//fin de combat//
	play(theme,true);
	continuer();
	dialogue2(eleve);
	
	
	//fin du jeu//
	}

