	print("///");delay(80);print("///");delay(80);print("///");delay(80);print("///");delay(80);
	print("///");delay(80);print("///");delay(80);print("///");delay(80);print("///");delay(80);
	print("///");delay(80);print("///");delay(80);print("///");delay(80);print("///");delay(80);
	print("///");delay(80);print("///");delay(80);print("///");delay(80);print("///");delay(80);
	print("///");delay(80);print("///");delay(80);print("///");delay(80);print("///");delay(80);delay(1000);show();clearScreen();}

    
